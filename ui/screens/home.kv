<HomeScreen>
    tree_view: rv_widget
    # chevron: chevron_icon
    MDScreen:
        TreeRV:
            id: rv_widget
            size_hint: 1, 1
            pos_hint: {'top': 1}
<TreeRV>:
    viewclass: 'NodeItem'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<NodeItem@MDBoxLayout>:
    MDListItem:
        padding: [20*(root.depth-1),0,0,0]
        on_release: app.root.ids.screen_manager.current_screen.on_node_click(root.node)
        MDListItemLeadingIcon:
            # id: chevron_icon
            icon: 'chevron-right' if root.is_expanded else 'chevron-down'
        MDListItemHeadlineText:
            text: root.text
    
